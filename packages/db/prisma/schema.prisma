datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("traveler") // "traveler" or "local"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Message {
  id        String      @id @default(uuid())
  content   String
  senderId  Int
  createdAt DateTime @default(now())
}
